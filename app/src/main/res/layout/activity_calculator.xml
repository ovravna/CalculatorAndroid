<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.olevra.calculator.Calculator"
    android:padding="0dp"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    android:clickable="true"
    android:onClick="onClickClear"
    android:nestedScrollingEnabled="true"
    android:longClickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="240dp"
        android:background="@color/highlighted_text_material_dark">

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="7"
            android:id="@+id/btn7"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:onClick="onClickNumber"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="8"
            android:id="@+id/btn8"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_alignParentTop="false"
            android:layout_toRightOf="@+id/btn7"
            android:layout_toEndOf="@+id/btn7"
            android:clickable="true"
            android:onClick="onClickNumber"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="9"
            android:id="@+id/btn9"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_alignParentTop="false"
            android:layout_toRightOf="@+id/btn8"
            android:layout_toEndOf="@+id/btn8"
            android:clickable="true"
            android:onClick="onClickNumber"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="+"
            android:id="@+id/btnPlus"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_alignParentTop="false"
            android:layout_toRightOf="@+id/btn9"
            android:layout_toEndOf="@+id/btn9"
            android:clickable="true"
            android:onClick="onClickOperator"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="4"
            android:id="@+id/btn4"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btn7"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:onClick="onClickNumber"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="5"
            android:id="@+id/btn5"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btn7"
            android:layout_toRightOf="@+id/btn4"
            android:layout_toEndOf="@+id/btn4"
            android:clickable="true"
            android:onClick="onClickNumber"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="6"
            android:id="@+id/btn6"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btn9"
            android:layout_toRightOf="@+id/btn8"
            android:layout_toEndOf="@+id/btn8"
            android:clickable="true"
            android:onClick="onClickNumber"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="-"
            android:id="@+id/btnMinus"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btn9"
            android:layout_toRightOf="@+id/btn6"
            android:layout_toEndOf="@+id/btn6"
            android:clickable="true"
            android:onClick="onClickOperator"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="1"
            android:id="@+id/btn1"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btn4"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:onClick="onClickNumber"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="2"
            android:id="@+id/btn2"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btn5"
            android:layout_toRightOf="@+id/btn4"
            android:layout_toEndOf="@+id/btn4"
            android:clickable="true"
            android:onClick="onClickNumber"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="3"
            android:id="@+id/btn3"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btn5"
            android:layout_toRightOf="@+id/btn2"
            android:layout_toEndOf="@+id/btn2"
            android:clickable="true"
            android:onClick="onClickNumber"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="*"
            android:id="@+id/btnTimes"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btnMinus"
            android:layout_toRightOf="@+id/btn3"
            android:layout_toEndOf="@+id/btn3"
            android:clickable="true"
            android:onClick="onClickOperator"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="C"
            android:id="@+id/btnClear"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btn1"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:onClick="onClickClear"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="0"
            android:id="@+id/btn0"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btn1"
            android:layout_toRightOf="@+id/btnClear"
            android:layout_toEndOf="@+id/btnClear"
            android:clickable="true"
            android:onClick="onClickNumber"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="="
            android:id="@+id/btnEquals"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btn3"
            android:layout_toRightOf="@+id/btn0"
            android:layout_toEndOf="@+id/btn0"
            android:nestedScrollingEnabled="false"
            android:clickable="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true"
            android:onClick="onClickEquals" />

        <Button
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:text="/"
            android:id="@+id/btnDiv"
            android:textColor="#fff"
            android:textSize="30sp"
            android:background="#4d4d4d"
            android:layout_below="@+id/btn3"
            android:layout_toRightOf="@+id/btnEquals"
            android:layout_toEndOf="@+id/btnEquals"
            android:clickable="true"
            android:onClick="onClickOperator"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:foregroundGravity="fill_horizontal|fill_vertical|center_horizontal|fill"
            android:layout_alignWithParentIfMissing="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/calculationView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="bottom|right"
        android:textSize="50sp"
        android:textIsSelectable="true"
        android:singleLine="false"
        android:background="@color/background_material_dark"
        android:autoText="false"
        android:paddingRight="5dp" />

</RelativeLayout>
